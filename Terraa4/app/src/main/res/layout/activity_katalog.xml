<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E2D2"
    tools:context=".KatalogActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Katalog"
        android:textSize="26sp"
        android:textColor="#000000"
        android:fontFamily="@font/sf_pro_display_bold"
        android:gravity="center"
        android:layout_margin="18dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search Bar -->
            <EditText
                android:id="@+id/telusurikonten"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/search_background"
                android:drawableStart="@drawable/ic_search"
                android:hint="Telusuri apasaja.."
                android:padding="8dp"
                app:cornerRadius="24dp"
                android:textColor="#000000" />

            <!-- Card Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Penjelasan Terlengkap Insektisida Yang Wajib Petani Ketahui"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Panduan lengkap penggunaan insektisida yang tepat untuk hasil pertanian optimal."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#294825"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Penjelasan Fungisida, Zat / Racun Pengendalian Penyakit Pada Tanaman"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Penjelasan tentang fungisida, yaitu zat yang digunakan untuk mengendalikan penyakit pada tanaman."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        android:backgroundTint="#294825"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="6 Tepat Dalam Penggunaan Pestisida"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Gunakan pestisida tepat untuk hasilkan pertanian sehat."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#294825"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Item 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Pestisida: Pengertian, Klasifikasi, dan Cara Kerja"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Cara mudah mengatasi hama pada tanaman seledri menggunakan pestisida nabati."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#294825"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Item 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Mengenal Kebutuhan Nutrisi Tanaman"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Nutrisi tanaman sangat penting untuk pertumbuhan optimal dan hasil pertanian."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        android:backgroundTint="#294825"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Item 6 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Dampak Pupuk Kimia dan Kesuburan tanah"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Panduan dan teknik tepat dalam penggunaan pupuk organik untuk meningkatkan hasil pertanian."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#294825"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Item 7 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/input_background"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Penjelasan lengkap Fungisida nativo 75 WG, Manfaat, Dosis, dan Cara aplikasinya"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:text="Pelajari cara penyiraman tanaman yang benar untuk mendukung pertumbuhan optimal."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/tontonsekarang6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#294825"
                        android:drawableEnd="@drawable/ic_right_arrow"
                        app:cornerRadius="8dp"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:text="Tonton Sekarang"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:itemIconTint="#4A7C59"
        app:itemTextColor="#4A7C59"
        app:menu="@menu/bottomnavigationview"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
